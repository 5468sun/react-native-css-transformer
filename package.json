{
  "name": "react-native-css-transformer",
  "version": "1.0.2",
  "description": "CSS transformer for react-native",
  "main": "index.js",
  "repository": "https://github.com/kristerkari/react-native-css-transformer",
  "scripts": {
    "precommit": "lint-staged",
    "test": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "files": ["index.js", "README.md"],
  "dependencies": {
    "css-to-react-native-transform": "^1.0.5",
    "semver": "^5.4.1"
  },
  "peerDependencies": {
    "react-native": ">=0.45.0"
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "space-before-function-paren": [2, "never"],
      "semi": [2, "always"],
      "quotes": [2, "double"]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  }
}
